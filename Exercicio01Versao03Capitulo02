  <script>
  
  let casa = "#";
  
  for(linha = 1; linha <= 7; linha++){
   //   document.write("<br>");
    
    for(coluna = 1; coluna <= linha; coluna++){
        document.write(casa);
    }
    document.write("<br>");
    
  }

  </script>
  
  
