  <!- vesao 02 ->
  <script>
  
  function contChar(palavra, letra) {
  let resultado = 0;
  
  for(let i = 0; i < palavra.length; i++) {
      if(palavra[i] === letra){
           resultado += 1;
        
      }
  }
    
    return resultado;
  }
    
    let calculo = contChar("ROBO", "B")
    
    document.write(calculo);
 
  </script>
  
  
  
